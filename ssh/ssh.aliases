function agentize () {
    INFO="\e[1m\e[93m"
    RESET="\e[0m"
    echo -e "${INFO}--->  Entering ssh-agent${RESET}"
    ssh-agent bash 
}

if [ $(ps -u $(whoami) | grep ssh-agent | wc -l) -gt 0 ]; then
    if [ "$(ssh-add -l)" == "The agent has no identities." ] ; then
        ssh-add ~/.ssh/id_rsa
    fi
fi
