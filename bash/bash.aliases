shopt -s expand_aliases
# Bash Aliases
alias ls='ls -GCF'
alias la='ls -A'
alias ll='la -lh'
alias l='ls'

alias less='less -R'

alias space='du -shcx $(for file in `/usr/bin/ls -A`; do echo "$file"; done)'

# Python
alias venv='python3 -m virtualenv venv'
alias activate='source ./venv/bin/activate'
